<%- include('../layouts/cabecera.ejs') %> 

<div class="container-fluid m-2">
  <h1 class="text-center"><strong> DESCUENTOS</strong></h1>
  <br><br>
  <form method="post" action="/">
    <div class="col-4">
      <h1><strong> Producto</strong></h1>
    </div>
    <div class="col-4">
      <div class="input-group">
        <select class="form-select" id="inputGroupSelect" aria-label="button-addon">
          <option selected>Producto...</option>
          <% for( let n = 0; n < prodl.rows.length; n++ ) { %>
          
            <option value=<%=n %> ><%=prodl.rows[n].nombre  %></option>
          <% } %>
        </select>
      </div>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-2">
      <label for="numero" class="from-label"> %</label>
      <input type="number" class="form-control" required>
    </div>
    <div class="col">
      <label for="Fecha_inicio" class="from-label">Fecha_inicio</label>
      <input type="date" class="form-control"required>
    </div>
    <div class="col">
      <label for="Fecha_fin" class="from-label">Fecha_fin</label>
      <input type="date" class="form-control"required>
    </div>
  </div>
  <div class="row  mt-3">
    <div class="col">
      <a href="/descuento" type="button" class="btn btn-primary">Aceptar</a>
    </div>
    <div class="col">
      <button type="submit" class="btn btn-primary">Cancelar</button>
    </div>
  </div>
</form>

  <div class="table-sm mt-5">
    <table class="table table-striped bg-light table-hover rounded" id="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">producto</th>
          <th scope="col">descuento</th>
          <th scope="col">fecha_inicio</th>
          <th scope="col">fecha_fin</th>
        </tr>
      </thead>
      <tbody id="myTable">
        
        <% for( let producto = 0; producto < productos.rows.length; producto++ ) { %>
          <tr>
              <td><%=producto+1 %> </td>
              <td><%=productos.rows[producto].nombre  %> </td>
              <td><%=productos.rows[producto].porcentaje  %> </td>
              <td><%=productos.rows[producto].fecha_inicio %> </td>
              <td><%=productos.rows[producto].fecha_fin %> </td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>


<%- include('../layouts/pie') %>